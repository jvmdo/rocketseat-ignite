{
  "name": "rest-api",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "^18.16.0"
  },
  "description": "REST API using Fastify and Knex",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "knex": "node --no-warnings --loader tsx ./node_modules/.bin/knex",
    "test": "vitest",
    "build": "tsup src --out-dir build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.45.0",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.20.0",
    "knex": "^2.5.1",
    "pg": "^8.11.1",
    "zod": "^3.21.4"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node18",
    "format": [
      "esm"
    ],
    "entry": [
      "src/**/*.ts"
    ]
  }
}
